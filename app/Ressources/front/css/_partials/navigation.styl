/***************************************/

.site-navigation
    width                               100%

.sn-list
    display                             block
    width                               100%
    padding                             10px

.sn-itm
    display                             block
    width                               100%
    text-align                          left

    &.active
        .sn-lnk
            font-b()

.sn-lnk
    display                             block
    padding                             10px
    font-size                           1.8rem
    color                               $color2

    &:hover
        font-b()

.menu-burger
    display                             block
    width                               35px
    height                              18px
    position                            absolute
    top                                 0
    right                               -60px
    margin                              20px 0
    transform                           rotate( 0deg )
    transition                          0.5s ease-in-out
    cursor                              pointer

    &.alt
        span
            background                  $color3

    span
        display                         block
        position                        absolute
        height                          2px
        width                           100%
        background                      $color2
        border-radius                   2px
        opacity                         1
        left                            0
        transform                       rotate( 0deg )
        transition                      0.25s ease-in-out

    span:nth-child(1)
        top                             0px

    span:nth-child(2)
        top                             8px

    span:nth-child(3)
        top                             16px

.navigation-opened
    .site-header
        left                            0

    .menu-burger
        span:nth-child(1)
            top                         8px
            transform                   rotate( 135deg )


        span:nth-child(2)
            opacity                     0
            left                        -60px

        span:nth-child(3)
            top                         8px
            transform                   rotate( -135deg )


/* Mediaqueries Mobile (639px) */
@media all and ( max-width: $smallScreenContentMinWidth )

    .sn-lnk
        font-size                       1.5rem

    #fp-nav
        display                         none

    .menu-burger
        opacity                         0
        transform                       translateX( -50px )

        &.displayed
            opacity                     1
            transform                   translateX( 0 )
