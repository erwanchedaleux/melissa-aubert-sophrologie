/***************************************/

.sc-sophrology
    position                            relative
    width                               100%
    height                              100vh
    overflow                            hidden
    background-color                    $color3

.scs-content
    position                            absolute
    z-index                             1
    top                                 50%
    left                                50%
    transform                           translate( -50%, -50% )
    width                               60%
    min-width                           $innerWidth

.scs-title-1
    display                             block
    margin-bottom                       45px
    font-size                           4.5rem
    color                               $color2
    text-align                          center
    text-transform                      uppercase
    font-l()

.scs-diagram
    display                             table
    margin-bottom                       45px

.scs-diagram_figures
    display                             table-cell
    width                               1%

.scs-diagram_title
    position                            relative
    display                             block
    font-size                           2rem
    text-transform                      uppercase
    color                               $color2
    width                               150px
    height                              @width
    margin                              0 auto
    border                              15px solid $color2
    border-radius                       100%
    line-height                         7.5
    text-align                          center
    font-b()

    &:before
        content                         ""
        display                         block
        position                        absolute
        z-index                         -1
        top                             -5px
        left                            @top
        width                           100%
        height                          100%
        border                          15px solid $color4
        border-radius                   100%

    &:after
        content                         ""
        display                         block
        position                        absolute
        z-index                         -1
        bottom                          -60px
        left                            50%
        margin-left                     1.5px
        transform                       translateX( -50% )
        width                           3px
        height                          40px
        border-left                     3px dashed $color2

.scs-diagram_description
    display                             block
    margin-top                          50px
    font-size                           1.6rem
    line-height                         1.3
    color                               $color2
    text-align                          center
    font-sb()

.scs-text
    float                               left
    width                               50%

.scs-paragraph
    color                               $color5
    font-size                           1.6rem
    line-height                         1.4
    padding-right                       20px

.scs-list
    margin-top                          10px
    color                               $color5
    font-size                           1.6rem
    line-height                         1.4
    padding-right                       20px

.scs-itm
    padding-left                        25px

    &:before
        content                         "\f105"
        position                        relative
        display                         inline
        font-family                     "FontAwesome"
        font-size                       1.6rem
        color                           $color5
        margin-left                     -10px

.scs-text_hightlight
    position                            relative
    float                               left
    width                               50%
    background-color                    $color2
    box-sizing                          border-box
    padding                             20px

    &:before
        content                         ""
        display                         block
        position                        absolute
        z-index                         -1
        top                             10px
        left                            @top
        width                           100%
        height                          100%
        background-color                $color4

    .scs-paragraph
        color                           $color3

    .scs-list
        margin-top                      30px
        color                           $color3

    .scs-itm
        &:before
            color                       $color3
