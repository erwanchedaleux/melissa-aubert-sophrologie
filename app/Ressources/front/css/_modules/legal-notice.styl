/***************************************/

.sc-legal-notice
    position                            relative
    width                               100%
    min-height                          100vh
    background-color                    $color3

.scln-content
    max-width                           $innerWidth
    padding-bottom                      20px

.scln-title-1
    display                             block
    padding-top                         50px
    margin-bottom                       45px
    font-size                           4.5rem
    color                               $color2
    text-align                          center
    text-transform                      uppercase
    font-l()

.scln-title-2
    display                             block
    margin-bottom                       10px
    font-size                           2.5rem
    color                               $color2
    font-l()

.scln-paragraph
    color                               $color2
    font-size                           1.3rem
    line-height                         1.4

.scln-list
    color                               $color5
    font-size                           1.4rem
    line-height                         1.3
    padding-right                       20px

.scln-itm
    padding-left                        25px

    &:before
        content                         "\f105"
        position                        relative
        display                         inline
        font-family                     "FontAwesome"
        font-size                       1.6rem
        color                           $color5
        margin-left                     -6px
        left                            -6px


/* Mediaqueries Mobile (639px) */
@media all and ( max-width: $smallScreenContentMinWidth )

    .scln-content
        max-width                       inherit
        padding-left                    20px
        padding-right                   20px
