/***************************************/

.sc-contact
    position                            relative
    width                               100%
    height                              100vh
    overflow                            hidden
    background-color                    $color2

.scc-background
    opacity                             0
    transform                           scale( 1.5 )
    transition5()

    &.animated
        opacity                         1
        transform                       scale( 1.1 )

.scc-content
    position                            absolute
    z-index                             1
    top                                 50%
    left                                50%
    transform                           translate( -50%, -50% )
    width                               60%
    min-width                           $innerWidth

.scc-title-1
    display                             block
    margin-bottom                       45px
    font-size                           4.5rem
    color                               $color2
    text-align                          center
    text-transform                      uppercase
    font-l()
    opacity                             0
    transition2()

    &.animated
        opacity                         1

.scc-form
    max-width                           480px
    margin                              0 auto
    opacity                             0
    transform                           scale( 0.8 )
    transition5()

    &.animated
        opacity                         1
        transform                       scale( 1 )

.contact-form
    width                               100%


/* Mediaqueries Mobile (639px) */
@media all and ( max-width: $smallScreenContentMinWidth )

    .sc-contact
        overflow                        visible

    .scc-background
        position                        absolute
        height                          100%
        left                            -100%

    .sccb-img
        min-width                       inherit
        width                           auto
        height                          100%

    .scc-content
        position                        relative
        top                             inherit
        left                            inherit
        transform                       inherit
        width                           90%
        min-width                       inherit
        margin                          0 auto

    .scc-title-1
        display                         block
        margin-top                      17px
        margin-left                     20px
        font-size                       2.3rem
