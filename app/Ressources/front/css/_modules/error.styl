/***************************************/

.sc-error
    position                            relative
    width                               100%
    height                              100vh
    overflow                            hidden
    background-color                    $color3

.sce-content
    position                            absolute
    z-index                             1
    top                                 50%
    left                                50%
    transform                           translate( -50%, -50% )
    width                               60%
    min-width                           $innerWidth

.sce-title-1
    display                             block
    margin-bottom                       10px
    font-size                           4.5rem
    color                               $color2
    text-align                          center
    text-transform                      uppercase
    font-l()

.sce-paragraph
    color                               $color2
    font-size                           1.8rem
    line-height                         1.4
    text-align                          center

.sce-btn
    display                             block
    margin                              20px auto 0 auto
    width                               260px


/* Mediaqueries Mobile (639px) */
@media all and ( max-width: $smallScreenContentMinWidth )

    .sce-paragraph
        font-size                       1.3rem
