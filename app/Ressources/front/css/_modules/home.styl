/***************************************/

.sc-home
    position                            relative
    width                               100%
    height                              100vh
    overflow                            hidden
    background-color                    $color1

.sch-background
    position                            relative
    top                                 0
    left                                0
    width                               100%
    height                              100%
    opacity                             0
    transition2()

    &.animated
        opacity                         1

    &:after
        content                         ""
        display                         block
        position                        absolute
        top                             0
        left                            0
        width                           100%
        height                          100%
        background-color                rgba( $color1, 0.4 )

.schb-img
    position                            absolute
    top                                 0
    left                                50%
    transform                           translateX( -50% )
    min-width                           1280px
    width                               100%

.sch-content
    position                            absolute
    z-index                             1
    top                                 50%
    left                                50%
    transform                           translate( -50%, -50% )
    margin-top                          -50px
    width                               60%
    min-width                           $smallScreenContentMaxWidth

.sch-title-1
    display                             block
    margin-bottom                       45px
    font-size                           3.4rem
    color                               $color2
    text-align                          center
    opacity                             0
    transform                           translateY( -30px )
    font-eb()
    transition2()

    &.animated
        opacity                         1
        transform                       translateY( 0 )

.sch-title-1_img
    display                             block
    margin                              0 auto
    width                               265px
    height                              177px

.sch-title-2
    position                            relative
    display                             block
    width                               437px
    height                              64px
    margin                              0 auto 55px auto
    font-size                           5.5rem
    color                               $color2
    text-align                          center
    text-transform                      uppercase
    background-color                    $color3
    line-height                         1.2
    opacity                             0
    transform                           translateX( -50px )
    font-2()
    font-b()
    transition2()

    &.animated
        opacity                         1
        transform                       translateX( 0 )

    &:before
        content                         ""
        display                         block
        position                        absolute
        z-index                         -1
        top                             10px
        left                            @top
        width                           100%
        height                          100%
        background-color                $color4

.sch-text
    position                            relative
    display                             block
    font-size                           2.2rem
    color                               $color2
    text-align                          center
    line-height                         0.5
    text-shadow                         0 7px 15px rgba( $color1, 0.5 )
    opacity                             0
    transform                           translateY( 30px )
    font-sb()
    font-ri()
    transition2()

    &.animated
        opacity                         1
        transform                       translateY( 0 )

.sch-text_quotation-marks
    position                            relative
    display                             inline
    font-size                           5rem
    font-li()

    &:nth-child(1)
        top                             10px

    &:nth-child(3)
        top                             13px
        left                            -6px

.sch-text_author
    display                             block
    margin-top                          25px
    font-li()

.sch-scroll-bottom
    position                            absolute
    bottom                              40px
    left                                50%
    width                               25px
    height                              41px
    transform                           translateX( -50% )

.sch-scroll-bottom_mouse-y
    width                               3px
    padding                             1px 9px
    height                              33px
    border                              3px solid #fff
    border-radius                       25px
    opacity                             0.75

.sch-scroll-bottom_scroller
    width                               3px
    height                              10px
    border-radius                       25%
    background-color                    #fff
    animation-name                      mouse_scroll_animation
    animation-duration                  2.2s
    animation-timing-function           cubic-bezier( .15, .41, .69, .94 )
    animation-iteration-count           infinite


@keyframes mouse_scroll_animation {
    0% {
        opacity                         0
    }
    10% {
        transform                       translateY( 0 )
        opacity                         1
    }
    100% {
        transform                       translateY( 15px )
        opacity                         0
    }
}
